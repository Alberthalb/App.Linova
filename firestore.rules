rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // modulos
    match /modules/{moduleId} {
      allow read: if request.auth != null;
      allow write: if false;

      // aulas dentro do modulo (se existirem)
      match /lessons/{lessonId} {
        allow read: if request.auth != null;
        allow write: if false;
      }

      // prova de capacidade
      match /assessmentQuestions/{id} {
        allow read: if request.auth != null;
        allow write: if false;
      }
    }

    // perfis e progresso do usuario
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;

      match /initialQuiz/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      match /progress/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      match /lessonsCompleted/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      match /moduleUnlocks/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // tudo mais bloqueado
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
